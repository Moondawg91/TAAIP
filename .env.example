# TAAIP 2.0 Environment Configuration
# Copy this to .env and fill in your values

# Database Configuration
# For development (default):
# DATABASE_URL=sqlite:///./data/taaip.sqlite3

# For production (PostgreSQL):
# DATABASE_URL=postgresql://username:password@hostname:5432/taaip_prod

# For production (SQL Server):
# DATABASE_URL=mssql+pyodbc://username:password@hostname/taaip_prod?driver=ODBC+Driver+17+for+SQL+Server

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
SQL_ECHO=false

# API Keys for External Systems
EMM_API_KEY=your_emm_api_key_here
IKROME_API_KEY=your_ikrome_api_key_here
SPRINKLR_API_KEY=your_sprinklr_api_key_here
SPRINKLR_CLIENT_ID=your_sprinklr_client_id_here
VANTAGE_API_KEY=your_vantage_api_key_here
G2_ZONE_API_KEY=your_g2_zone_api_key_here
RECRUITER_ZONE_API_KEY=your_recruiter_zone_api_key_here

# SharePoint Configuration
SHAREPOINT_SITE_URL=https://your-org.sharepoint.com/sites/taaip
SHAREPOINT_USERNAME=your_username
SHAREPOINT_PASSWORD=your_password

# Redis Configuration (for caching & Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Data Sync Settings
SYNC_EMM_INTERVAL=15  # minutes
SYNC_SPRINKLR_INTERVAL=60  # minutes
SYNC_FULL_INTERVAL=1440  # minutes (daily)

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_DATA_VALIDATION=true
ENABLE_ARCHIVAL=true
ENABLE_COMPLIANCE_CHECKS=true

# Security
JWT_SECRET_KEY=your_secret_key_here_change_in_production
CAC_AUTH_ENABLED=false

# Frontend / CORS / API
# Replace 'yourdomain.com' with actual deployed domain once DNS + SSL complete
FRONTEND_ORIGIN=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com
VITE_API_URL=https://yourdomain.com/api

# If staging environment needed, duplicate with STAGING_* prefixes


# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Migration
MIGRATE_FROM_SQLITE=false
